---
layout: default
---
<main>
    <section class="container hero-section">
        <h1>{{ global.siteTitle }}</h1>
        <p class="body-xl">{{ global.siteDescription }}</p>
    </section>
    <section class="container titled-section">
        <h2>Most recent zines</h2>
        <div class="zine-grid">
            {% for zine in collections.zine | reverse | slice(4) %}
                <a href="{{ zine.url }}">
                    <img src="{{ zine.data.pages[0] }}" alt="{{ zine.data.title }}"></a>
            {% endfor %}
        </div>
    </section>
    <section class="container titled-section">
        <h2>All zines (A-Z)</h2>
        <ul class="zine-list">
            {% for zine in collections.zine | reverse %}
                <a class="body-lg" href="{{ zine.url }}">{{ zine.data.title }}</a>
            {% endfor %}
        </ul>
    </section>
</main>
