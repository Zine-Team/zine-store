{# Macro ------------------------------------------------------------------------------------------------------------------------------- #}

{% macro section(props={}, attrs={}) %}

{# Values ------------------------------------------------------------------------------------------------------------------------------ #}

{# Theme styles ----------- #}

{% set sectionStyles = "w-full @container" %}
{% set paddingStyles =
    {
        "site": "px-site-inline",
        "lines": "px-lines",
        "none": ""
    }
 %}

{# Other ------------------ #}

{% set tag %}{% if props.tag %}{{ props.tag }}{% else %}section{% endif %}{% endset %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}

<{{ tag }} data-section
    {{ loopAttrs(attrs) }}
    class="{{ attrs.class }} {{ sectionStyles }} {% if props.padding %}{{paddingStyles[props.padding]}}{% else %}{{ paddingStyles.site }}{% endif %}">
    {{ caller() | safe }}
</{{ tag }}>

{% endmacro %}

