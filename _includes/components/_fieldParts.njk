{# Nested components ------------------------------------------------------------------------------------------------------------------- #}

{% from "snippets/loopAttrs.njk" import loopAttrs %}

{# Values ------------------------------------------------------------------------------------------------------------------------------ #}

{% set directionStyles = {
    row: "grid gap-2 items-center",
    column: "flex flex-col gap-1.5"
} %}

{% set fieldLabelStyles = "text-neutral font-bold text-pretty" %}
{% set fieldLabelRequiredStyles = "text-[firebrick]" %}
{% set fieldDescriptionStyles = "text-neutral/70 text-sm text-pretty" %}

{% set fieldsetOptionLabelSize = "text-base" %}
{% set fieldsetOptionStyles %} gap-2 {{ fieldsetOptionLabelSize }} {% endset %}
{% set fieldsetInputStyles %} accent-current w-[1.1em] h-[calc(var(--{{ fieldsetOptionLabelSize }})*var(--{{ fieldsetOptionLabelSize }}--line-height))] {% endset %}
{% set fieldsetOptionLabelStyles = "text-neutral" %}

{% set fieldWrapperStyles = "grow flex" %}
{% set fieldStyles = "leading-none grow bg-surface-light min-w-px not-disabled:hover:bg-surface-lighter border-1 border-neutral-lighter disabled:opacity-60 not-disabled:hover:border-neutral-light min-h-tube rounded p-2.5" %}

{# Macros ------------------------------------------------------------------------------------------------------------------------------ #}

{% macro fieldLabel(props={}, attrs={}) %}
    <{{ props.tag }}
        {% if props.tag === "label" %}for="{{ props.fieldProps.name }}"{% endif %}
        class="{{ fieldLabelStyles }} {{ attrs.class }}"
        {{ loopAttrs(attrs) }}
    >
        {{ props.fieldProps.label }} {% if props.fieldProps.fieldAttrs.required %}<sup class="{{ fieldLabelRequiredStyles }}">*</sup>{% endif %}
    </{{ props.tag }}>
{% endmacro %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}

{% macro fieldDescription(props={}, attrs={}) %}
    <small
        {{ loopAttrs(attrs) }}
        class="{{ fieldDescriptionStyles }} {{ attrs.class }}">
        {{ props.description }}
    </small>
{% endmacro %}
