{% set typeClasses = {
    button: "font-bold leading-none bg-white-smoke hover:bg-ghost-white border-1 border-dark-grey hover:border-grey min-w-15 shadow-2xs rounded py-4 px-5",
    ghost: "hover:bg-white-smoke py-item-gap px-5 rounded",
    link: "text-link underline hover:no-underline underline-offset-3 decoration-1 px-0!"
}%}

{% set sizeClasses = {
    lg: "font-bold underline-offset-3 decoration-from-font"
}%}

{%- macro button(
    props={
        label: null,
        href: null,
        type: "button",
        size: null,
        icon: null
    },
    attrs={}
    ) -%}

    <{% if props.href %}a href="{{- props.href -}}"{% else %}button{% endif %}
        class="flex justify-center gap-4 items-center disabled:opacity-60 active:scale-[.98] cursor-pointer {{ attrs.class }} {% if attrs.disabled %}pointer-events-none{% endif %} {{ typeClasses[props.type] }} {{ sizeClasses[props.size] }}"

        {% for key, value in attrs %}
            {% if key != 'class' %}{{ key }}="{{ value }}"{% endif %}
        {% endfor %}
    >

        {% if props.icon %}
            <span class="text-icon">{{ props.icon }}</span>
        {% endif %}

        {% if props.label %}
            <span>{{ props.label }}</span>
        {%- endif -%}

        {%- if not props.label and not props.icon -%}
            {{ caller() | safe }}
        {%- endif -%}

    </{% if props.href %}a{% else %}button{% endif %}>

{%- endmacro -%}
