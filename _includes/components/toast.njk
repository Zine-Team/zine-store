{#
    Toaster

    @param id = "" // optional suffix to be appended on the default id; ex: toasterdialog
#}

{% macro toaster(props = {
    id: ""
}) %}
    <div id="toaster{{props.id}}" class="fixed top-nav right-site flex justify-center left-site z-50 pointer-events-none"></div>
{% endmacro %}


{#
    Toast

    @param toasterId = "" // optional suffix to where the toast should be teleported
    @param message = "" // What the toast should say
#}

{% macro toast(props = {
    toasterId: "",
    message: ""
}) %}
    <template x-teleport="#toaster{{props.toasterId}}">
        <div
            x-show="{{ props.show }}"
            x-transition:enter-start="opacity-0 -translate-y-2"
            x-transition:leave-end="opacity-0 -translate-y-2"
            class="bg-black text-center border-grey border delay-100 shadow-zine rounded transition text-white-smoke px-5 py-3 text-base">
            {{ props.message }}
        </div>
    </template>
{% endmacro %}
