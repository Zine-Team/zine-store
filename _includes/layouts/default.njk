{% set pageTitle %}
{%- if metatdata.seoTitle -%}
    {{ metadata.seoTitle }} –{% elseif title %}{{ title }} –
{% endif %}
{{- global.siteTitle -}}
{% endset %}

{% set pageDescription %}
{%- if metadata.seoDescription -%}{{- metadata.seoDescription -}}
{% else %}{{- global.siteDescription -}}
{%- endif -%}
{% endset %}

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ pageTitle }}</title>
        <meta property="og:title" content="{{ pageTitle }}"/>
        <meta name="description" content="{{ pageDescription }}">
        <meta property="og:description" content="{{ pageDescription }}"/>
        <meta property="og:url" content="{{ global.siteDomain }}{{ page.url }}"/>
        <meta property="og:image" content="{{ global.siteDomain }}{% if metadata.seoImage %}{{ metadata.seoImage }}{% else %}{{ global.siteImage }}{% endif %}"/>
        <meta property="og:type" content="{% if ogType %}{{ ogType }}{% else %}website{% endif %}"/>
        <meta name="generator" content="{{ eleventy.generator }}">
        <link rel="icon" type="image/x-icon" href="{{ global.favicon }}">
        <link rel="stylesheet" href="/bundle.css">

    </head>
    <body>
        <nav class="container navbar">
            <span>
                {% if page.url !== "/" %}
                    <a href="/">Home</a>
                {% endif %}
            </span>
            <span>{{page.outputPath}}</span>
            <span>
                {% if page.url === "/" %}
                    {# <a href="/">Submit a zine</a> #}
                {% else %}
                    <a href="{{ pdf }}" download>Download zine</a>
                {% endif %}
            </span>
        </nav>
        {{ content | safe }}
    </body>
</html>
