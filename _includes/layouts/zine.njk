---
layout: default
---
{% from "components/button.njk" import button %}

<nav class="zine-store-container shrink-0 grid grid-cols-2 items-center py-4 lg:py-6 sticky top-0 z-10 bg-gainsboro">
    <span class="flex justify-self-start">
        {{button(label="< Home", href="/", type="link")}}
    </span>
    <span class="flex justify-self-end">
        {{button(label="Download zine", href=pdf, type="button", size="base", attrs={download: null})}}
    </span>
</nav>

<main class="overflow-hidden w-full flex flex-col items-center gap-4 grow relative">
    <div data-zine-part="navigator" class="zine-store-container flex overflow-y-auto overflow-x-hidden flex-col lg:flex-row lg:justify-center lg:gap-10 xl:gap-20 grow">
        {{ button(label="<", size="lg", class="h-[max(25dvh,_72px)] hidden lg:block self-center", attrs={"data-action": "prev-wide"}) }}
        <div data-zine-part="root" class="grow lg:grow-0 flex flex-col justify-center items-center perspective-zine col-start-1 col-end-3 lg:col-auto">
            <!-- where the zine template is injected -->
            <div data-zine-part="outer" class="w-full md:justify-center py-2 flex items-center" data-template="zine-pages">
                <div data-zine-part="spread" class="relative grid grid-cols-2 justify-self-start shrink-0 lg:justify-self-center aspect-zine md:w-full max-w-4xl pointer-events-none perspective-zine front-cover">
                    {% for page in pages %}
                        <div data-zine-part="page" class="relative backface-hidden row-start-1 row-end-2 even:col-start-1 odd:col-start-2 even:origin-right odd:origin-left">
                            <img src="{{ page.image }}" alt="{{ page.altText }}">
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {{ button(label=">", size="lg", class="h-[max(25dvh,_72px)] hidden lg:block self-center", attrs={"data-action": "next-wide"}) }}
        <div class="flex lg:hidden gap-4 py-4 px-site-padding w-[100vw] bg-gainsboro sticky -translate-x-site-padding bottom-0">
            {{ button(label="<", size="lg", class="grow hidden md:block", attrs={"data-action": "prev-wide"}) }}
            {{ button(label=">", size="lg", class="grow hidden md:block", attrs={"data-action": "next-wide"}) }}
            {{ button(label="<", size="lg", class="grow md:hidden", attrs={"data-action": "prev-narrow"}) }}
            {{ button(label=">", size="lg", class="grow md:hidden", attrs={"data-action": "next-narrow"}) }}
        </div>
    </div>
</main>

<script defer src="/bundle.js" type="module"></script>
