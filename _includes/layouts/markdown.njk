---
layout: default

---
{% from "components/button.njk" import button %}
{% from "components/siteNav.njk" import siteNav %}
{% from "components/markdown.njk" import markdown %}
{% from "components/blocks.njk" import section, container %}

{% set custom %}
    b, strong {
        color: red;
    }
{% endset %}

{{ siteNav() }}
{% call section({},{class:"py-section"}) %}
    {% call container({size:"sm"},{class:"flex flex-col gap-site"}) %}
        <header><h1 class="text-xl">{{ title }}</h1></header>
        {{ markdown({
            content: content,
            fontSize: "text-base",
            primaryColor: "color-black",
            linkColor: "color-link",
            radius: "radius",
            customStyles: custom
        }) }}
    {% endcall %}
{% endcall %}
