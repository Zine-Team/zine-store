---
layout: default
---
{% from "components/fields.njk" import select, input, textarea, checkbox, radio %}
{% from "components/button.njk" import button %}

<form class="zine-store-container gap-section-title grid max-w-3xl my-section">
    <h1 class="text-xl">Form components</h1>
    <div
        x-data="{
            selected: '',
            date: '',
            text: '',
            email: '',
            textarea: '',
            number: '',
            disabled: false,
        }"
        @select-sort-by.window="selected = $event.detail"
        @input-date.window="date = $event.detail"
        @input-name.window="name = $event.detail"
        @input-email.window="email = $event.detail"
        @input-number.window="number = $event.detail"
        @input-textarea.window="textarea = $event.detail"
        class="flex flex-col gap-section-title">

        {{ checkbox({
                name: "checkboxes",
                label: "Checkboxes",
                options: [
                    "Scales",
                    "Weights"
                ]
            })
        }}

        {{ radio({
                name: "radio",
                label: "Radio",
                options: [
                    "Scales",
                    "Weights"
                ]
            })
        }}

        {{ select(
            props={
            "name": "sort-by",
            "label": "Sort by...",
            "options": [
                'A-Z',
                'Most recent'
            ],
            "description": "This area describes the field above!"},
            fieldAttrs={
                "placeholder": "unselected",
                "required": true
            })
        }}
        {# text #}
        {{ input(
            props={
                "name": "name",
                "label": "Name",
                "description": "This area describes the field above!"
            },
            fieldAttrs={
                "type": "text",
                required: true
            })
        }}
        {# email #}
        {{ input(
            props={
                "name": "email",
                "label": "Email"
            },
            fieldAttrs={
                "type": "email",
                required: true,
                "autocomplete": "off"
            })
        }}
        {# number #}
        {{ input(
            props={
                "name": "number",
                "label": "Number"
            },
            fieldAttrs={
                "type": "number",
                required: true,
                "min": 0,
                "max": 5,
                "required": true
            })
        }}

        {{ textarea(
            {
                name: "textarea",
                label: "Bio"
            }, {
                rows: "5",
                required: true,
                placeholder: "Type something here..."
            }
        ) }}

        {{ button({label: "Submit", type: "button"}) }}
        <div class="mt-8 text-center p-4 bg-dark-grey flex flex-col gap-item-gap">
            <span x-text="selected"></span>
            <span x-text="date"></span>
            <span x-text="email"></span>
            <span x-text="text"></span>
            <span x-text="number"></span>
            <span x-text="textarea"></span>
        </div>
    </div>
</form>
