{% set typeClasses = {
        button: "leading-none bg-white-smoke hover:bg-ghost-white border-1 border-dark-grey hover:border-grey min-w-15 shadow-2xs rounded py-4 px-5",
        link: "text-link underline hover:no-underline underline-offset-3 decoration-1 px-0!"
    }%}

{% set sizeClasses = {
        lg: "font-bold underline-offset-3 decoration-from-font"
    }%}

{%- macro button(props={
        label: null,
        href: null,
        type: "button",
        size: null,
        attrs: {}
    }) -%}

    <{% if props.href %}a href="{{props.href}}"{% else %}button{% endif %}
        class="flex justify-center items-center disabled:opacity-60 active:scale-[.98] {{ props.attrs.class }} {% if props.attrs.disabled %}pointer-events-none{% endif %} {{ typeClasses[props.type] }} {{ sizeClasses[props.size] }}"

        {% for key, value in props.attrs %}
            {% if key != 'class' %}{{ key }}="{{ value }}"{% endif %}
        {% endfor %}
    >

        {%- if props.label -%}
            {{props.label}}
        {%- else -%}
            {{ caller() | safe }}
        {%- endif -%}

    </{% if props.href %}a{% else %}button{% endif %}>

{%- endmacro -%}

